<% content_for :name, "home2" %>

<div class="top"></div>


<div id="bodyContent">
  <div class="six columns centered" id="profile2">
    <div class="mainphoto"><%= image_tag @auth.photo %></div>
    <% if @auth.provider == 'facebook' %>
      <%= @auth.email %>
      <span class="glyph enclosed">h</span>
    <% end %>
    <h3 class="authname">Welcome <%= @auth.username %></h3>
  </div>

<div class="barrier"></div>


<%= render 'search2' %>
<div class="allitems">
  <div class="seven columns">

  <div id="markers">



<div id="map_canvas"></div>
<script>
    display_map(40.7142, -74.0064, 13);
</script>



<% @companies.each do |x| %>
    <script>
        add_marker(<%= x.lat %>, <%= x.long %>, '<%= x.name %>', '<%= x.url %>', '<%= x.address %>');
    </script>
<% end %>
</div>

</div>
<div class="four columns">

<h3 class="innersearch">Company List</h3>


  <% @companies.each do |company| %>
<div class="listitem">
    <div class="comname">
      <%= link_to company.name, company %></td>
    </div>
    <br />
    <div class="address">
      <%= company.address %>
    </div>
    <br />
    <div class="url">
      <%= link_to "Company Website", company.url %>
    </div>
    <br />
    <%#= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%#= link_to 'Edit', edit_company_path(company) %>
</div>
<% end %>

<div class="row"></div>

<br />
<div class="page">
  <%= paginate @companies %>
</div>
</div>




</div>
</div>



