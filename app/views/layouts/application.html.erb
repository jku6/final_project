<!DOCTYPE html>
<html>
<head>
  <title>Biz-Shout</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>

  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{GOOGLEKEY}&sensor=false" %>

  
  <%= csrf_meta_tags %>

</head>
<body class="<%= yield(:name) if yield %>">
  <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=479466075426075";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div id="container">

    <header>
      
    </header>

    <nav class="top-bar">
      <ul>
        <li class="name"><h1><a href="/">Biz-Shout</a></h1></li>
        <li class="toggle-topbar"><a href="#"></a></li>
      </ul>
        <section>
          <ul class="left">

            
            
            <li class="has-dropdown">
              <a href="/companies">Companies</a>

                <ul class="dropdown">
                  <li><a href="#">Dropdown Link</a></li>
                </ul>

            </li>
            <li><%= link_to "Map", maps_path %></li>
            
            <% if @auth %>
            <li>Signed in as <strong><%= @auth.username %></strong>!</li>
            <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
            <% else %>
            <li><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></li>
            <% end %>
            
          
            
          </ul>

          

          
        </section>
    </nav>

    <%= yield %>
    
    <footer>

    </footer>

  </div><!-- end container -->
<%= javascript_include_tag "alertify.js" %>
</body>
</html>
